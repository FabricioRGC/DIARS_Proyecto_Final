@model DIARS_Proyecto_Final.Models.Equipo

@{
    ViewData["Title"] = Model.EquipoId == 0 ? "Agregar Equipo" : "Editar Equipo";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AgregarEditar" method="post">
    <input type="hidden" asp-for="EquipoId" />

    <div class="form-group">
        <label asp-for="NombreEquipo"></label>
        <input asp-for="NombreEquipo" class="form-control" />
        <span asp-validation-for="NombreEquipo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <input asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    @if (Model.EquipoId != 0)
    {
        <div class="form-group">
            <label asp-for="Estado"></label>
            <select asp-for="Estado" class="form-control">
                <option value="activo">Activo</option>
                <option value="inactivo">Inactivo</option>
            </select>
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>
    }

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
